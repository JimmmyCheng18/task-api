# Task API Environment Variables
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Environment Mode
# Options: debug, development, release, production
GIN_MODE=release

# CORS Settings
ALLOWED_ORIGINS=*

# Timeout Settings (in seconds)
SHUTDOWN_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60
IDLE_TIMEOUT=120

# Docker Compose Port Configuration
# Host port for main service
HOST_PORT=8080
# Container internal port (usually keep as 8080)
CONTAINER_PORT=8080
# Host port for development service
DEV_HOST_PORT=3000